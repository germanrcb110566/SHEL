@model List<SelectListItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery.dataTables.js"></script>
<h4>Mantenimiento de Catálogos</h4>
<div class="alert aler-@ViewBag.alerta"></div>
<div class="row">
    <!--
        <div class="col-md-12">
            <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Catalogo/Grabar")'" value="Editar"/>
        </div>
    -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <table class="table">
                <tr>
                    <td>
                        Catálogo
                    </td>
                    <td>
                        
                        @Html.DropDownList("ClaseCatalogo", Model, new { @class = "form-control", id = "ClaseCatalogo" })
                    </td>
                    <td>
                        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Parametros/Grabar")'" value="Crear" />
                        <input onclick="document.location.href='@Url.Content("~/Parametros/Editar/")'" type="button" value="Editar" class="btn btn-default" />
                        <input onclick="jsEliminar(Registro_id)" type="button" value="Eliminar" class="btn btn-danger" />
                    </td>
                </tr>
            </table>
        </div>
        

        <div class="form-group">
            <table class="table ">
                <tr>
                    <td>
                        Atributos Catálogo
                    </td>
                    <td>
                        
                        <select id="IdCatalogo" name="IdCatalogo" class="form-control"></select>
                    </td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Parametros/Editar/")'" type="button" value="Editar" class="btn btn-default" />
                        <input onclick="document.location.href='@Url.Content("~/Parametros/Editar/")'" type="button" value="Editar" class="btn btn-default" />
                        <input onclick="jsEliminar(Registro_id)" type="button" value="Eliminar" class="btn btn-danger" />

                        
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>


<script>
    var cboClaseCatalogos = document.getElementById("ClaseCatalogo")
    cboClaseCatalogos.addEventListener("change", Refresh);
    Refresh()
    function Refresh()
    {
        fetch("@Url.Content("~/Catalogo/Catalogo")" + "?IdCatalogo=" + cboClaseCatalogos.value)
            .then(function (result) {
                if (result.ok) {
                    return result.json();
                }
            })
            .then(function (data) {
                console.log(data);
                cbo = document.getElementById("IdCatalogo");
                cbo.innerHTML = "";
                data.forEach(function (element) {
                    
                    let opt = document.createElement("option");
                    opt.appendChild(document.createTextNode(element.Text))
                    opt.value = element.value;

                    cbo.appendChild(opt);
                })
            })
    }

</script>

